<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
      http://www.liquibase.org/xml/ns/pro
      http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">

    <changeSet  author="sanudn"  id="01">
        <createTable tableName="customer">
            <column  name="id"  type="INTEGER">
                <constraints  nullable="true"  primaryKey="true"  unique="true"/>
            </column>
            <column  name="name"  type="CHAR(50)">
                <constraints  nullable="true" />
            </column>
            <column  name="is_active"  type="boolean">
                <constraints  nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="liquibase-docs" id="addColumn-example">
        <addColumn catalogName="manpower"
                   schemaName= "manpower"
                   tableName="customer">
            <column name="address"
                    type="varchar(255)"/>
            <column afterColumn="id"
                    name="Age"
                    type="int">
                <constraints nullable="false" />
            </column>
        </addColumn>
    </changeSet>

    <changeSet author="liquibase-docs" id="dropColumn-example">
        <dropColumn
                    columnName="id"
                    schemaName="manpower"
                    tableName="customer">
            <column name="address"/>
            <column name="Age"/>
        </dropColumn>
    </changeSet>

    <changeSet author="liquibase-docs" id="addColumn-test">
        <addColumn catalogName="manpower"
                   schemaName= "manpower"
                   tableName="customer">
            <column name="address"
                    type="varchar(255)"/>
            <column afterColumn="id"
                    name="Age"
                    type="int">
                <constraints nullable="false" />
            </column>
        </addColumn>
    </changeSet>


    <changeSet author="liquibase-docs" id="dropColumn-test">
        <dropColumn
                columnName="id12"
                schemaName="manpower"
                tableName="customer">
            <column name="address"/>
            <column name="Age"/>
        </dropColumn>
    </changeSet>


</databaseChangeLog>